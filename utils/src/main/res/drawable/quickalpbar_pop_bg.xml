<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">

        <shape android:shape="rectangle">
            <size
                android:width="80dp"
                android:height="80dp"/>
            <solid android:color="#DDDDDD"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">

        <shape android:shape="rectangle">
            <size
                android:width="80dp"
                android:height="80dp"/>
            <solid android:color="#EBEBEB"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

</layer-list>

